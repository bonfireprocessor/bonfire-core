CAPI=2:
name: ::bonfire-core:0

generators:
  gen_core:
    interpreter: python3
    command: gen_core.py

generate:
  core_top:
    generator: gen_core
    parameters:
      language: vhdl    

filesets:
  rtl:
    depend:
    - core_top
    
  sim:
    depend:
    - ::bonfire-util:0
    file_type: vhdlSource
    files:
    - vhdl/monitor.vhd
    - vhdl/sim_MainMemory.vhd
    - vhdl/tb_bonfire_core.vhd


      
parameters:
  TestFile:
    datatype: file
    description: Initial boot RAM contents (in hex)
    paramtype: generic
    scope: private

targets:
  default:
    filesets: [ rtl ]
    generate: [ core_top ]
  
  sim:
    default_tool: ghdl
    filesets: [ sim ]
    generate: [ core_top ]

    parameters:
    - TestFile
    tools:
      ghdl:
        analyze_options: [ --ieee=synopsys ]
        run_options: [--wave=cpu.ghw,  --ieee-asserts=disable, --stop-time=7000ns ]
      xsim:
        xelab_options: [ "--debug typical" ]
    toplevel: tb_bonfire_core
